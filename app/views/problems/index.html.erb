
<% provide(:title, '問題一覧') %>
<div class="mt-3">
  <h1 class="text-center">問題一覧</h1>
  <% if admin_logged_in?%>
    <div class="mb-4 d-flex">
      <%= link_to "問題（選択式）作成", new_problem_path(question_style:1), class: "btn btn-success mr-2" %>
      <%= link_to "問題（記述式）作成", new_problem_path(question_style:2), class: "btn btn-primary" %>
    </div>
  <% end %>
  <% if admin_logged_in? %>
    <%= render 'admin_index' %>
  <% elsif user_logged_in? %>
    <%= render 'user_index' %>
  <% end %>
</div>
