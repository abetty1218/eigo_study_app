<% provide(:title, "パスワード再設定") %>
<% provide(:button_text, 'パスワード変更') %>
<div class="mt-3">
  <h1 class="text-center">パスワード再設定</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, "新しいパスワード" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em><br />
      <% end %>
      <%= f.password_field :password, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード確認" %>
      <%= f.password_field :password_confirmation, class:"form-control" %>
    </div>

    <div class="actions">
      <%= f.submit yield(:button_text), class: "btn btn-primary mt-1" %>
    </div>
  <% end %>

</div>
