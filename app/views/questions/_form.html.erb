
<%= form_for(@question, url:problem_questions_path(@problem)) do |f| %>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
    <% if f.object.errors.include?(:content) %>
      <p style="color: red;"><%= f.object.errors.full_messages_for(:content).first %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :answer %>
    <%= f.text_field :answer, class: 'form-control' %>
    <% if f.object.errors.include?(:answer) %>
      <p style="color: red;"><%= f.object.errors.full_messages_for(:answer).first %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
    <% if f.object.errors.include?(:description) %>
      <p style="color: red;"><%= f.object.errors.full_messages_for(:description).first %>
    <% end %>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary mt-1" %>
<% end %>
